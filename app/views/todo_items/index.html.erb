<p id="notice"><%= notice %></p>
<div class="container">

<h1>Todo Items</h1>

<table class="table table-condensed table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Complete', todo_item, class:"btn btn-success active" %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), class:"btn btn-primary active" %></td>
        <td><%= link_to 'SFL', todo_item, class:"btn btn-warning active", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Item', new_todo_item_path, class:"btn btn-primary btn-sm active" %>
</div>
